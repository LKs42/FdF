#include <unistd.h>
#include <math.h>
#include "libft.h"
#include "mlx.h"
#include <fcntl.h>
#define WIDTH 2000
#define HEIGHT 2000
#define TITLE "hell world"
#define ABS(N) ((N<0)?(-N):(N))

void	loop(char **curr_line, t_scene *scene, int y)
{
	int x;

	x = 0;
	while (curr_line[x])
	{
		ft_putnbr(ft_atoi(curr_line[x]));
		//scene->map[y][x] = (float)ft_atoi(curr_line[x]);
			x++;
	}
//	if (scene->map_w == 0)
//		scene->map_w = x;
//	scene->map[y][x] = 0;
	ft_putchar('\n');
}
	
t_point	**fileread(int fd, t_scene *scene)
{
	char line;
	char **curr_line;
	int	y;
	char *str;

	str = malloc(sizeof(char) * 100000);
	y = 0;
	while(*curr_line)
	{
		ft_str_read_line(str, fd);
		curr_line = ft_split(str, " \n");
		loop(curr_line, scene, y);
		y++;
	}
//	if (scene->map_h == 0)
//		scene->map_h = y;
//	scene->map[y][0] = 0;
return (NULL);
}

void    fill_img(t_scene *param, int color)
{
        int i;
        int c;

        c = color;
        i = 0;
        while(i < param->win_width * param->win_height)
        {
                param->str[i] = c;
                i++;
        }
}

int	deal_key(int key, t_scene *scene)
{
	ft_putnbr(key);
	if (key == 53)
		exit (0);
	return (0);
}

t_scene *init_scene(int w, int h, char *str)
{
        t_scene *scene;

        scene = malloc(sizeof(t_scene) * 5);
        scene->win_height = h;
        scene->win_width = w;
        scene->map_h = 0;
        scene->map_w = 0;
        scene->mlx_ptr = mlx_init();
        scene->title = str;
        scene->win_ptr = mlx_new_window(scene->mlx_ptr, w, h, str);
        scene->focale = 100;
        scene->rot_x = 0;
        scene->rot_y = 0;
        scene->rot_z = 0;
	scene->img_ptr = mlx_new_image(scene->mlx_ptr, scene->win_width, scene->win_height);
        scene->str = (int*)mlx_get_data_addr(scene->img_ptr, &scene->bpp, &scene->sl, &scene->endian);
//	scene->map = fileread(open(argv[1], 0_RDONLY, scene);
	return (scene);
}

int	main(int argc, char **argv)
{
	t_scene *scene;
	if (argc == 2)
		fileread(open(argv[1], O_RDONLY), scene);
	//	scene = init_scene(WIDTH, HEIGHT, TITLE);
	ft_putendl("ok");
	fill_img(scene, 0x32644B);

	mlx_put_image_to_window(scene->mlx_ptr, scene->win_ptr, scene->img_ptr, 0, 0);
 	mlx_key_hook(scene->win_ptr, deal_key, scene);
	mlx_loop(scene->mlx_ptr);
	return (0);
}
